{
  "manifest_version": 3,
  "name": "Hiredd Extension",
  "version": "1.0",
  "description": "Track job applications, mock interviews, send emails, and find recruiters.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "web_accessible_resources": [{
  "resources": ["images/icon.png"],
  "matches": ["<all_urls>"]
}],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
